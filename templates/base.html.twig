<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ 'Welcome on' | trans }} FoodDiary!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous"> {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top bg-dark" role="navigation">
        <!-- Navigation -->
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link active"
                   aria-current="page"
                   href="{% if app.user %} {{ path('diary') }}{% endif %}">
                    Food diary
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   href="{{ path('add-new-record') }}">{{ 'Add a new report' | trans }}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   href="{{ path('diary') }}">{{ 'See all my reports' | trans }}
                </a>
            </li>
            {% if app.user %}
                <li class="nav-item">{{ app.user.fullname }}</li>
            {% endif %}
        </ul>
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            {% if app.user %}
                <a href="{{ path('app_logout') }}"
                   type="button"
                   class="btn btn-danger btn-xs pull-right">
                    <i class="fa fa-sign-out"></i> {{ 'Logout' | trans }}
                </a>
            {% endif %}
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            {% if app.user %}
                {% for type, flash_messages in app.session.flashBag.all %}
                    {% for flash_message in flash_messages %}
                        <div class="alert alert-{{ type }}" role="alert">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block heading %}
                    <!-- Page Heading -->
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">{{ 'All Reports' | trans }}
                                <small>{{ 'Everything that has been eaten' | trans}} !</small>
                            </h1>
                        </div>
                    </div>
                    <!-- /.row -->
                {% endblock %}
            {% endif %}
        </div>

        <div class="row">
            {{ render(controller('App\\Controller\\DiaryController::caloriesStatusAction')) }}
        </div>

        <div class="row">
            {% block body %}{% endblock %}
        </div>


        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Food Diary {{ "now"|date("Y") }}</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>
    </div>
<!-- /.container -->
<!-- Page Content -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>

</body>
</html>
